<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" /> <!-- Para acessar IMEI -->
    <application android:usesCleartextTraffic="true" tools:targetApi="28"
        tools:ignore="GoogleAppIndexingWarning" tools:replace="android:usesCleartextTraffic">
        <receiver
            android:name=".DeviceInfoReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="com.cliente.RESPONSE_INFO" />
            </intent-filter>
        </receiver>
    </application>
</manifest>